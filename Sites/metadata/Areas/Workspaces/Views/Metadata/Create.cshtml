@model FIFTHMVC.Models.CreateNewsMetadata
@{
    Layout = "";
}

<div>
    <div>
        @using (Html.BeginForm("create", "metadata", null, FormMethod.Post, new { id = "createform", @class = "form-horizontal", role = "form" }))
        {
            <div class="form-horizontal">
                @Html.ValidationSummary(true)

                <div class="form-group">
                    <label class="control-label col-md-3">รหัสข่าว</label>
                    <div class="col-md-9">
                        @Html.TextBoxFor(model => model.NewsID, new { @class = "form-control input-sm", style = "display:inline-block;", @readonly = true })
                    </div>
                </div>


                <div class="form-group">
                    <label class="control-label col-md-3">รหัสไฟล์</label>
                    <div class="col-md-9">
                        @Html.TextBoxFor(model => model.MediaID, new { @class = "form-control input-sm", style = "display:inline-block;", @readonly = true })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-3">Metadata</label><span style="color:#ff0000;display:inline-block;position:absolute;font-size:1.2em;">*</span>
                    <div class="col-md-9">
                        <span class="select-menu" style="float:left;">
                            <span>เลือก METADATA</span>
                            @Html.DropDownListFor(m => m.DataFieldId, ViewData["modelDataField"] as SelectList, "เลือก METADATA", new { @class = "form-control" })
                        </span>
                    </div>
                </div>


                <div class="form-group">
                    <label class="control-label col-md-3">รายละเอียด</label><span style="color:#ff0000;display:inline-block;position:absolute;font-size:1.2em;">*</span>
                    <div class="col-md-9">
                        @Html.TextBoxFor(model => model.Keyword, new { @class = "form-control input-sm", style = "display:inline-block;" })
                    </div>
                </div>
            </div>

        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
<script>

    //$.validator.unobtrusive.parse('#createform');

    $(function () {
        $(".select-menu > select > option:eq(0)").attr("selected", "selected");
        $(".select-menu > select").on("change", function () {
            var selectmenu_txt = $(this).find("option:selected").text();
            $(this).prev("span").text(selectmenu_txt);
        });
    });
</script>

